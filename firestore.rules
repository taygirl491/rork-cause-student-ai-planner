rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Tasks collection - users can only access their own tasks
    match /tasks/{taskId} {
      allow read, update, delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Classes collection - users can only access their own classes
    match /classes/{classId} {
      allow read, update, delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Notes collection - users can only access their own notes
    match /notes/{noteId} {
      allow read, update, delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
    }
    
    // Study Groups collection - members can read/update, creator can delete
    match /studyGroups/{groupId} {
      // Helper function to check if user is the creator
      function isCreator(creatorId) {
        return request.auth.uid == creatorId;
      }
      
      // Allow reading groups (both list and get operations)
      // The query will return all documents, but client-side filtering is applied
      allow read: if isAuthenticated();
      
      // Allow authenticated users to create groups
      // Relaxed validation for creation - only check auth and creatorId
      allow create: if isAuthenticated() && 
        request.resource.data.creatorId == request.auth.uid;
      
      // Allow authenticated users to update groups
      // Client-side code ensures proper membership validation
      allow update: if isAuthenticated();
      
      // Only creator can delete the group
      allow delete: if isAuthenticated() && isCreator(resource.data.creatorId);
      
      // Messages subcollection - members of the parent group can read/write
      match /messages/{messageId} {
        // Allow authenticated users to read/write messages
        // Client-side filtering ensures only group members access messages
        allow read, write: if isAuthenticated();
      }
    }

    // Users collection - users can update their own profile (e.g., pushToken)
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create: if isOwner(userId);
    }

    // Goals collection - users can only access their own goals
    match /goals/{goalId} {
      allow read, update, delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
    }

    // Content collection - Admin only write, authenticad read
    match /content/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'minatoventuresinc@gmail.com';
    }
  }
}
